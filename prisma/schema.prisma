// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  SUPER_ADMIN
  ACADEMIC_STAFF
  CONTENT_EDITOR
}

enum NoticeCategory {
  GENERAL
  URGENT
  ADMISSION
  EXAM
  RESULT
  EVENT
}

enum CourseType {
  DIPLOMA           // 1-year diploma
  INDUSTRIAL_TRAINING // 6 weeks or 6 months training
}

// ============================================
// MODELS
// ============================================

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         UserRole @default(CONTENT_EDITOR)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  blogs Blog[]

  @@map("users")
}

model Course {
  id          String     @id @default(cuid())
  slug        String     @unique
  title       String
  code        String     @unique
  description String?    @db.Text
  type        CourseType @default(DIPLOMA)
  duration    String // e.g., "1 Year", "6 Weeks", "6 Months"
  eligibility String? // e.g., "+2", "Graduate"
  syllabusUrl String? // Google Drive link
  syllabus    Json? // Optional structured syllabus data
  highlights  String[] // Array of key features
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  results Result[]

  @@map("courses")
}

model Faculty {
  id               String   @id @default(cuid())
  slug             String   @unique
  name             String
  designation      String
  department       String
  email            String   @unique
  phone            String?
  photoUrl         String?
  specialization   String? // Area of expertise
  qualifications   String[] // Array of degrees/certifications
  experience       String? // e.g., "10 years"
  bio              String?  @db.Text // Brief biography
  teachesDiploma   Boolean  @default(false) // Teaches diploma courses
  teachesTraining  Boolean  @default(false) // Teaches industrial training
  linkedIn         String?
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("faculty")
}

model Notice {
  id            String         @id @default(cuid())
  title         String
  slug          String         @unique
  content       String         @db.Text
  excerpt       String? // Short summary
  category      NoticeCategory @default(GENERAL)
  attachmentUrl String?
  isPinned      Boolean        @default(false)
  publishedAt   DateTime       @default(now())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([isPinned, publishedAt])
  @@map("notices")
}

model Result {
  id          String   @id @default(cuid())
  rollNumber  String
  studentName String
  courseId    String
  semester    Int
  sgpa        Float?
  cgpa        Float?
  resultData  Json // Store subject-wise marks as JSON
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([rollNumber, courseId, semester])
  @@index([rollNumber])
  @@map("results")
}

model Blog {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String?   @db.Text // Short summary for listing
  content     String    @db.Text // Rich text content
  coverImage  String? // Cover image URL
  authorId    String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  author User? @relation(fields: [authorId], references: [id], onDelete: SetNull)

  @@index([slug])
  @@index([publishedAt])
  @@index([isPublished])
  @@map("blogs")
}

model Event {
  id               String   @id @default(cuid())
  title            String
  description      String   @db.Text
  date             DateTime
  venue            String
  registrationLink String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([date])
  @@map("events")
}

enum StartupType {
  STARTUP   // Early stage startup
  COMPANY   // Established company
}

enum StartupStatus {
  INCUBATING // Currently in incubation
  ACTIVE     // Graduated and operating
  GRADUATED  // Successfully completed incubation
}

model Startup {
  id              String        @id @default(cuid())
  slug            String        @unique
  name            String
  type            StartupType   @default(STARTUP)
  sector          String // Industry/sector (e.g., "EdTech", "AgriTech")
  description     String        @db.Text
  logoUrl         String? // Company/startup logo
  websiteUrl      String?
  foundedYear     Int? // Year of establishment
  founderNames    String[] // Array of founder names
  status          StartupStatus @default(INCUBATING)
  highlights      String[] // Key achievements/metrics
  fundingReceived String? // e.g., "â‚¹50 Lakhs seed funding"
  teamSize        Int? // Number of employees
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([type])
  @@index([status])
  @@index([isActive])
  @@map("startups")
}
